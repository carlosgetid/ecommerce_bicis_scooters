@model IEnumerable<Venta_Bicis_Scooters.ENTITY.DetallePedido>

<h2>Listado de los Detalle de Pedidos</h2>
<br />
<div class="table-wrapper-scroll-y my-custom-scrollbar">
    <table class="table table-bordered table-striped mb-0">
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Pedido)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Total)
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                 <td class="text-center">
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Pedido)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Producto)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Total)
                </td>

            </tr>
        }

    </table>
</div>



<style>

    .my-custom-scrollbar {
        position: relative;
        height: 600px;
        overflow: auto;
    }

    .table-wrapper-scroll-y {
        display: block;
    }
</style>