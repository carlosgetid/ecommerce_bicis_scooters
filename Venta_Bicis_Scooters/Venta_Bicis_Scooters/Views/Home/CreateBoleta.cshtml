@model Venta_Bicis_Scooters.ENTITY.Boleta

@{
    ViewBag.Title = "CreateBoleta";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Nueva Boleta</h2>

<div class="table-wrapper-scroll-y my-custom-scrollbar">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

          

            <div class="form-group">
                @Html.LabelFor(model => model.Pedido, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Pedido", (SelectList)ViewBag.pedido, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Crear" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Retornar a la Lista", "ListarBoleta", new { }, new { @class = "btn btn-outline-primary" })
    </div>
</div>

<style>

    .my-custom-scrollbar {
        position: relative;
        height: 700px;
        overflow: auto;
    }

    .table-wrapper-scroll-y {
        display: block;
    }
</style>