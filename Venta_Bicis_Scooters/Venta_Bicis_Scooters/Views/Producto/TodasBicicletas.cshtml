@model IEnumerable<Venta_Bicis_Scooters.ENTITY.Bicicleta>
@{
    ViewBag.Title = "TodasBicicletas";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<header>

    <div class="row">
        <div class="col-lg-12">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="~/Cliente/PrincipalCliente">Inicio <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="~/Producto/TodasBicicletas">Bicicletas<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="~/Producto/TodosScooter">Scooters<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="~/Producto/TodosAccesorios">Accesorios<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Contactanos<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="~/Cliente/Login">Login<span class="sr-only">(current)</span></a>
                        </li>

                    </ul>
                </div>
            </nav>
        </div>
    </div>


</header>
<br />

<section>
    <div class="wrapper">

        <div class="row">

            <!--FILTRO-->
            <div class="col-md-2">
                <h3>
                    Bicicletas
                </h3>
                <h4>
                    Marcas
                </h4>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" value="">Monark
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" value="">Monarette
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" value="">Giant
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" value="">Liv
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" value="">Felt
                    </label>
                </div>
                <br />
                <h4>
                    Precio
                </h4>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" value="">900 - 1100
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" value="">1100 - 1700
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" value="">1700 - 2800
                    </label>
                </div>
                <br />
                <h4>
                    Aro
                </h4>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" value="">20 pulgadas
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" value="">24 pulgadas
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" value="">26 pulgadas
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" value="">27.5 pulgadas
                    </label>
                </div>
                <br />
                <a href="#" class="btn btn-primary">Filtrar</a>
            </div>


            <!--LSITADO BICICLETA-->
            <div class="col-sm-10">
                @foreach (var item in Model)
                {

                    <div class="col-sm-4" style="float:left;margin-bottom: 40px;">

                        <div class="card">

                            <a href="@Url.Action("DetallesBicicletas",new { id=item.ID})" style="outline: none;text-decoration: none;color:black;">
                                
                                <div class="text-center">
                                    <img src="@item.Imagen" style="width:100%;">
                                </div>

                                <br />

                                <div class="text-center" style="margin-left:10px;">


                                    <h5>@item.Descripcion</h5>
                                    <p> S/.@String.Format("{0:f}", @item.Precio)   </p>

                                </div>
                            </a>



                        </div>

                    </div>
                }
            </div>

        </div>


    </div>

</section>

