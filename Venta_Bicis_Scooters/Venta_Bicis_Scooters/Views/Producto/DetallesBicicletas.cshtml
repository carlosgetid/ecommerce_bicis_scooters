@model Venta_Bicis_Scooters.ENTITY.Bicicleta
    @{
        ViewBag.Title = "DetallesBicicletas";
        Layout = "~/Views/Shared/_LayoutCliente.cshtml";
    }

<header>

        <div class="row">
            <div class="col-lg-12">
                <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item active">
                                <a class="nav-link" href="~/Cliente/PrincipalCliente">Inicio <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="~/Producto/TodasBicicletas">Bicicletas<span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="~/Producto/TodosScooter">Scooters<span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="~/Producto/TodosAccesorios">Accesorios<span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="#">Contactanos<span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="~/Cliente/Login">Login<span class="sr-only">(current)</span></a>
                            </li>

                        </ul>
                    </div>
                </nav>
            </div>
        </div>

</header>
<br />

<section>
    <div class="wrapper">

        <div class="row">

            <div class="col-sm-12">

                <br />
                <div class="col-sm-6" style="float:left;">
                    <img src="@Model.Imagen" style="width:50%;" />
                </div>


                <div class="col-sm-6" style="float:right;">
                    <br />
                    <h2>@Model.Descripcion</h2>
                    <p>Marca <u>@Model.Marca </u> </p>
                    <p style="color:red;"> <strong> S/. @String.Format("{0:f}", Model.Precio) </strong>  </p>
                    <br />
                    <a href="#" class="btn btn-primary" style="margin-left:50px;">Agregar al Carrito</a>

                </div>

            </div>

          

            <div class="col-sm-12" style="float:left;margin-left:15px;">
                <br />
                <br />
                <h5>Caracteristicas Destacadas </h5>

                <table class="table table-bordered table-striped">
                    <tr>
                        <td> Aro:</td>
                        <td> @Model.Aro</td>
                    </tr>

                    <tr>
                        <td> Color:</td>
                        <td> @Model.Color</td>
                    </tr>

                    <tr>
                        <td> Freno:</td>
                        <td>  @Model.Freno</td>
                    </tr>

                    <tr>
                        <td> Peso:</td>
                        <td> @Model.Peso</td>
                    </tr>

                </table>

            </div>

        </div>
    </div>







</section>

